generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String  @id @default(cuid())
  fullName  String
  email     String  @unique
  country   String
  passwordHash String
  createdAt DateTime @default(now())
  cases     Case[]
}

model AdminUser {
  id           String   @id @default(cuid())
  email        String   @unique
  displayName  String
  role         String
  passwordHash String
  createdAt    DateTime @default(now())
}

model Case {
  id              String           @id
  userId          String
  user            User             @relation(fields: [userId], references: [id])
  serviceId       String
  stage           String
  platformFeePaid Boolean
  paymentStatus   String           @default("pending")
  caseDetails     String?
  caseSummary     String?
  caseManagerMeta String?
  practitionerMeta String?
  caseManagerId   String?
  practitionerId  String?
  videoSlot       String?
  videoLink       String?
  documentCount   Int              @default(0)
  escrowMilestones String
  timeline        String
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  documents       VaultDocument[]
  videoReservations VideoReservation[]
}

model VaultDocument {
  id         String   @id @default(cuid())
  caseId     String
  case       Case     @relation(fields: [caseId], references: [id])
  name       String
  type       String
  status     String
  summary    String
  uploadedAt DateTime @default(now())
}

model VideoReservation {
  id          String   @id @default(cuid())
  caseId      String
  case        Case     @relation(fields: [caseId], references: [id])
  scheduledAt String
  link        String
  createdAt   DateTime @default(now())
}
